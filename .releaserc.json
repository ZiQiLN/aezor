{
  "branches": [
    "stable",
    {
      "name": "master",
      "prerelease": "true"
    }
  ],

  "plugins": [
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "gameplay", "release": "patch" },
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "minor" },
          { "type": "refactor", "release": false }
        ]
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/curseprofile.zip",
            "label": "CurseForge Distribution {nextRelease.gitTag}",
            "name": "cursepack-${nextRelease.gitTag}"
          },
          {
            "path": "dist/serverpack.zip",
            "name": "server-${nextRelease.gitTag}",
            "label": "Server Distribution {nextRelease.gitTag}"
          }
        ]
      }
    ]
  ]
}
