{
  "branches": [
    "stable",
    {
      "name": "master",
      "prerelease": "true"
    }
  ],

  "plugins": [
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        },
        "writerOpts": {
          "commitSort": ["subject", "scope"]
        },
        "presetConfig": "./.conventionalchangelog.json"
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "gameplay", "release": "patch" },
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "minor" },
          { "type": "refactor", "release": false }
        ]
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/curseprofile.zip",
            "label": "CurseForge Distribution {nextRelease.gitTag}",
            "name": "mysticalchemists-${nextRelease.gitTag}"
          },
          {
            "path": "dist/serverpack.zip",
            "name": "mysticalchemists.server-${nextRelease.gitTag}",
            "label": "Server Distribution {nextRelease.gitTag}"
          }
        ]
      }
    ]
  ]
}
